<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_audio_detail_background">

        <TextView
            android:id="@+id/dialog_audio_detail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_audio_detail_name_tv"
            style="@style/AudioDetailTextViewStyle"
            android:layout_below="@id/dialog_audio_detail_title_tv"
            android:layout_marginTop="20dp"
            android:text="名称：" />

        <TextView
            android:id="@+id/dialog_audio_detail_name_content_tv"
            style="@style/AudioDetailTextViewStyle"
            android:layout_alignBottom="@id/dialog_audio_detail_name_tv"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/dialog_audio_detail_name_tv"
            tools:text="aaaaaaaaaaaaaaaa" />

        <TextView
            android:id="@+id/dialog_audio_detail_time_tv"
            style="@style/AudioDetailTextViewStyle"
            android:layout_below="@id/dialog_audio_detail_name_tv"
            android:layout_marginTop="10dp"
            android:text="时间：" />

        <TextView
            android:id="@+id/dialog_audio_detail_time_content_tv"
            style="@style/AudioDetailTextViewStyle"
            android:layout_alignBottom="@id/dialog_audio_detail_time_tv"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/dialog_audio_detail_time_tv"
            tools:text="aaaaaaaaaaaaaaaa" />

        <TextView
            android:id="@+id/dialog_audio_detail_size_tv"
            style="@style/AudioDetailTextViewStyle"
            android:layout_below="@id/dialog_audio_detail_time_tv"
            android:layout_marginTop="10dp"
            android:text="大小：" />

        <TextView
            android:id="@+id/dialog_audio_detail_size_content_tv"
            style="@style/AudioDetailTextViewStyle"
            android:layout_alignBottom="@id/dialog_audio_detail_size_tv"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/dialog_audio_detail_size_tv"
            tools:text="aaaaaaaaaaaaaaaa" />

        <TextView
            android:id="@+id/dialog_audio_detail_path_tv"
            style="@style/AudioDetailTextViewStyle"
            android:layout_below="@id/dialog_audio_detail_size_tv"
            android:layout_marginTop="10dp"
            android:text="大小：" />

        <TextView
            android:id="@+id/dialog_audio_detail_path_content_tv"
            style="@style/AudioDetailTextViewStyle"
            android:layout_alignTop="@id/dialog_audio_detail_path_tv"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/dialog_audio_detail_path_tv"
            tools:text="aaaaaaaaaaaaaaaa" />

        <TextView
            android:id="@+id/dialog_audio_detail_close_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_audio_detail_path_content_tv"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/purple_700"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>